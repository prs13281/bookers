<h1>Books</h1>

<table class="teble">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>
  <tbody class="book_index_table_tbody">
    <% @books_show.each do |book| %>
    <tr>
      <td><%= @book.title %></td>
      <td><%= @book.body %></td>
      <td><% link_to "Show", book_path %></td>
      <td><% link_to "Edit", edit_book_path %></td>
      <td><% link_to "Destroy", destroy_book_path %></td>
    </tr>
  </tbody>
</table>

<h2>New book</h2>
<%= form_with model: @book do |f| %>
 <div><label for="book title">title</label></div>
 <%= f.text_field :title %>

<div><label for="book body">body</label></div>
 <%= f.text_area :body %>

 <div><%= f.submit'Create Book' %></div>
 <% end %>
